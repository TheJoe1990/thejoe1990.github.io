<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.thejoewizard" name="The Joe Wizard" version="1.1.0" provider-name="The Joe">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">The Joe Wizard</summary>
    <description lang="en">The Joe Wizard offers many maintenance features, selective add-on data saving, and automated build installs.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.thejoe" name="The Joe Repository" version="1.1" provider-name="The Joe">
	<extension point="xbmc.addon.repository" name="The Joe Repository">
		<info compressed="false">https://raw.githubusercontent.com/TheJoe1990/repository.thejoe/master/zips/addon.xml</info>
		<checksum>https://raw.githubusercontent.com/TheJoe1990/repository.thejoe/master/zips/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.github.com/TheJoe1990/repository.thejoe/master/zips/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>The Joe's Kodi Build Repository</summary>
		<description>The Joe's Builds</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
